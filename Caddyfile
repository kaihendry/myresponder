{$HOST} {
	startup php-fpm
	tls {$M_EMAIL}
	root index
	fastcgi / 127.0.0.1:9000 php
}

d.{$HOST} {
	tls {$M_EMAIL}
	root /srv/docs
	markdown
}

m.{$HOST} {
	tls {$M_EMAIL}
	root m
	basicauth / {$M_USER} {$M_PASS}
	fastcgi / 127.0.0.1:9000 php
	log logs/m.access.log
	errors logs/m.error.log
}

h.{$HOST} {
	tls {$M_EMAIL}
	root h
	fastcgi / 127.0.0.1:9000 php
	log logs/h.access.log
	errors logs/h.error.log
}

g.{$HOST} {
	tls {$M_EMAIL}
	root g
	fastcgi / 127.0.0.1:9000 php
	log logs/g.access.log
	errors logs/g.error.log
}
